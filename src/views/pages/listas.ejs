<!-- initial file -->
<!DOCTYPE html>
<html lang="en">
<%- include('../includes/head.ejs') %>

    <body>
        <%- include('../includes/header.ejs'); %>
            <div class="container">
                <%- include('../includes/sidebar.ejs', {percentage}); %>
                    <main class="main">
                        <div class="container-geral">
                            <div>

                            <h4>Listas</h4>
                            <% for (const list of lists){ %>
                                <div class="tasks-item">
                                    <div class="">
                                        <svg height="30" width="30">
                                            <circle cx="15" cy="15" r="10" fill="transparent" stroke="black"
                                                stroke-width="2" />
                                        </svg>
                                        <p>
                                            <%= list.title %>
                                        </p>
                                    </div>
                                    <div>
                                        <img src="./assets/Edit.svg" alt="" onclick="toggleListFormEdit('<%= list.id%>')" >
                                        <img src="./assets/Tasks.svg" alt="" onclick="navigateTo('lists/<%= list.id%>/tasks')" >
                                        <form id="delete-list-form-<%= list.id%>" action="/lists/<%= list.id%>/delete" method="POST">
                                            <!-- Submit do formulÃ¡rio -->
                                            <button class="btn-no-style" type="submit">
                                                <img src="./assets/Remove.svg" alt="">
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            <% } %>
                            </div>
                        </div>
                    </main>
                    <%- include('../includes/lists-edit-form.ejs'); %>
            </div>
            <script src="./js/ui.js"></script>
    </body>

</html>